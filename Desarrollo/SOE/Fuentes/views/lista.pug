doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Soe
  link(rel='icon' type='image/x-icon' href='/static/img/favicon.ico')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css' integrity='sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2' crossorigin='anonymous')
  link(rel='stylesheet' href='/static/css/lista.css')

header
      nav#navbar
        #navegation.container
          a(href='/')
            img#Logo(src='/static/img/logo_empresa_opt.png' alt='Logotipo')
          span#navbar-toggle
            i.fas.fa-bars
          ul#main-nav
            li
              a(href='/dashboard') Cursos
            li
              a(href='/') Logout


.container
.row
.col-md-8.mx-auto
  br
  h1= `Nombre de la Tarea: ${result[0].nombre}`
  div= `Nombre del curso: ${result[0].id_curso}`
  div= `Fecha de entrega: ${result[0].fecha_entrega}`
  br
  table.table.table-bordered.table-striped
    thead.thead-dark
      tr
        th(scope='col') #
        th(scope='col') Nombre
        th(scope='col') Apellido
        th(scope='col') Documento
    tbody
    
    each person,i in personas
      tr
        th(scope='row')= (i+1)
        td= `${person.nombre}`
        td= person.email
        td
          a.btn.btn-primary.btn-block(href='#') Descargar
      
  a.btn.btn-info(href=`/curso/${result[0].id_curso}`) volver
